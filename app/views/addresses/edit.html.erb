<main>
    <div class="container">
        
        
        <div class="row">
          <div class="col-md-6 offset-md-1">
            <h2 class="my-5">配送先編集</h2>
          </div>
        </div>
        
        <%= form_with model:@address, local: true do |f| %>
        
             <div class="form_group ml-4 pt-1">
                 <%= f.label "郵便番号（ハイフンなし）", class:"col-sm-3 col-form-label" %>
                <%= f.text_field :postcode%>
            </div>
            <div class="form_group ml-4 pt-1">
                <%= f.label "住所", class:"col-sm-3 col-form-label" %>
                <%= f.text_field :address, class:"col-5"  %>
            </div>
            <div class="form_group ml-4 pt-1">
                <%= f.label "宛名", class:"col-sm-3 col-form-label"  %>
                <%= f.text_field :full_name %>
            </div>
            
            <div class="form-group">
             <%= f.submit "変更内容を保存", class:"btn btn-success" %>
            </div>
        
        <% end %>
        
    
    </div>
</main>