<main>
    <div class="container">
        
        <div class="m-5">
        <h2>配送先登録/一覧</h2>
        </div>
        
        <div class="form_group row">
            <div class="mx-auto col-10">
              <%= form_with model:@address, local: true do |f| %>
                 <div class="row">
                     <%= f.label "郵便番号（ハイフンなし）", class:"col-4 col-form-label" %>
                    <%= f.text_field :postcode, class:"col-auto" %>
                 </div>
                
                 <div class="row">
                    <%= f.label "住所", class:"col-4 col-form-label" %>
                    <%= f.text_field :address, class:"col-auto" %>
                 </div>
                
                 <div class="row">
                    <%= f.label "宛名", class:"col-4 col-form-label"  %>
                    <%= f.text_field :full_name, class:"col-auto" %>
                     <div class="col-4">
                            <%= f.submit "新規登録", class:"btn btn-success" %>
                     </div>
                 </div>
              <% end %>
             </div>
        </div>
                
        
        
            <div class="mx-auto col-10 mb-5">
                <table class="table table-bordered">
                   <thead>
                    <th>郵便番号</th>
                    <th>住所</th>
                    <th>宛名</th>
                    <th></th>
               　　</thead>
                
                    <tbody>
                         @addresses.each do |a|
                        <td>
                            < a.postcode %>
                        </td>
                        <td>
                            < a.address %>
                        </td>
                        <td>
                            < a.full_name %>
                        </td>
                        <td>
                            <!--<link_to "編集する", edit_address_path(a.id), class:"btn- btn-success" %>-->
                            <!--< link_to "削除する", addresses_path(a.id), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-sm btn-danger" %>-->
                        </td>
                        
                         end
                    </tbody>
                     
                </table>
            </div>
    
    </div>
</main>