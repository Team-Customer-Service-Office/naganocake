<main>
  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-1">
        <h2 class="my-5">会員情報編集</h2>
      </div>
    </div>
    <div class="row">
      <div class="mx-auto">
        <%= form_with model: [:admin, @customer], local:true do |f| %>
          <table class="table table-borderless mb-5">
            <tbody>
              <tr>
                <th>会員ID</th>
                <td><%= @customer.id %></td>
　          　</tr>
　          　<tr>
                <th><%= f.label :氏名 %></th>
                <td>
                  <div class="input-group">
                    <div class="d-flex input-group-prepend">
                      <span class="input-group-text">(姓)</span>
                    </div>
                    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "令和",class: "form-control" %>
                  </div>
                </td>
                <td>
                  <div class="input-group">
                    <div class="d-flex input-group-prepend">
                      <span class="input-group-text">(名)</span>
                    </div>
                    <%= f.text_field :last_name, autocomplete: "last_name", placeholder: "道子",class: "form-control" %>
                  </div>
                </td>
              </tr>
              <tr>
                <th><%= f.label :フリガナ %></th>
                <td>
                  <div class="input-group">
                    <div class="d-flex input-group-prepend">
                      <span class="input-group-text">(セイ)</span>
                    </div>
                    <%= f.text_field :first_name_kana, autocomplete: "first_name_kana", placeholder: "レイワ",class: "form-control" %>
                  </div>
                </td>
                <td>
                  <div class="input-group">
                    <div class="d-flex input-group-prepend">
                      <span class="input-group-text">(メイ)</span>
                    </div>
                    <%= f.text_field :last_name_kana, autocomplete: "last_name_kana", placeholder: "ミチコ",class: "form-control" %>
                  </div>
                </td>
              </tr>
　          　<tr>
                <th><%= f.label :郵便番号（ハイフンなし） %></th>
                <td><%= f.text_field :postcode, placeholder: "0000000",class: "form-control" %></td>
                <td></td>
              </tr>
　          　<tr>
                <th><%= f.label :住所 %></th>
                <td colspan="2"><%= f.text_field :address, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0",class: "form-control" %></td>
              </tr>
　          　<tr>
                <th><%= f.label :電話番号（ハイフンなし） %></th>
                <td><%= f.text_field :phone_number, autocomplete: "phone_number", placeholder: "000000000",class: "form-control" %></td>
                <td></td>
              </tr>
　          　<tr>
                <th><%= f.label :メールアドレス %></th>
                <td><%= f.email_field :email, autocomplete: "email", placeholder: "sample@sample.com",class: "form-control" %></td>
                <td></td>
              </tr>
　          　<tr>
　　            <th><%= f.label :会員ステータス %></th>
　　            <td>
                  <%= f.radio_button :is_deleted, :enable %>
                  <%= f.label :is_deleted, Customer.is_deleteds_i18n[:enable] %>
                  <%= f.radio_button :is_deleted, :disable %>
                  <%= f.label :is_deleted, Customer.is_deleteds_i18n[:disable] %>
                </td>
　        　  </tr>
            </tbody>
　      　</table>
　      　<div class="col text-center mb-5">
              <%= f.submit "変更を保存する" , class: 'btn btn-sm btn-success w-25 mt-3' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>