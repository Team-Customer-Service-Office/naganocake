<main>
  <div class="container">
    <div class=“row”>
      <div class="col-md-6 offset-md-1">
        <h2 class="my-5">会員一覧</h2>
      </div>
    </div>
    <div class=“row”>
      <div class="mx-auto col-md-8">
        <table class="table text-center  mb-5">
          <thead>
            <tr>
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
              <tr>
                <td><%= customer.id %></td>
                <td>
                  <!--フルネームにするための記述-->
                  <%= link_to admin_customer_path(customer.id) do %>
                    <%=  customer.first_name + customer.last_name %>
                  <% end %>
                </td>
                <td><%= customer.email %></td>
                <% if customer.is_deleted == "enable" %>
                  <td class="font-weight-bold text-success">有効</td>
                <% else %>
                  <td class="font-weight-bold text-secondary">退会</td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
        <!--kaminariを使用するための記述-->
        <%= paginate @customers %>
      </div>
    </div>
  </div>
</main>