<main>
  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-1">
        <h2 class="my-5"><%=  @customer.first_name + @customer.last_name %>さんの会員詳細</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 mx-auto">
        <table class="table table-bordered mb-5">
          <tbody>
            <tr>
              <th class="table-warning">会員ID</th>
              <td><%= @customer.id %></td>
　        　</tr>
　　        <tr>
　　          <th class="table-warning">氏名</th>
　　          <!--フルネームにするための記述-->
　　          <td><%=  @customer.first_name + @customer.last_name %></td>
　　        </tr>
　        　<tr>
　　          <th class="table-warning">フリガナ</th>
　　          <td><%=  @customer.first_name_kana + @customer.last_name_kana %></td>
　          </tr>
　        　<tr>
　　          <th class="table-warning">郵便番号</th>
　　          <td><%= @customer.postcode %></td>
　        　</tr>
　        　<tr>
　  　        <th class="table-warning">住所</th>
　　          <td><%= @customer.address %></td>
　　        </tr>
　        　<tr>
　　          <th class="table-warning">電話番号</th>
　　          <td><%= @customer.phone_number %></td>
　        　</tr>
　        　<tr>
　　          <th class="table-warning">メールアドレス</th>
　　          <td><%= @customer.email %></td>
　        　</tr>
　        　<tr>
　　          <th class="table-warning">会員ステータス</th>
　　          <% if @customer.is_deleted == "enable" %>
                <td class="font-weight-bold text-success">有効</td>
              <% else %>
                <td class="font-weight-bold text-secondary">退会</td>
              <% end %>
　    　    </tr>
　    　  </tbody>
　    　</table>
      </div>
    </div>
    <div class="row">
      <div class="mx-auto mb-5">
　　    <%= link_to "編集する", edit_admin_customer_path(@customer), class: 'btn btn-sm btn-success' %>
　　    <%= link_to "注文履歴一覧を見る", admin_orders_path, class: 'btn btn-sm btn-primary' %>
      </div>
    </div>
  </div>
</main>