<main>
  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-1">
        <h2 class="my-5">会員情報詳細</h2>
      </div>
    </div>
    <div class="row">
      <div class="mx-auto">
        <table class="table table-borderless mb-5">
          <tbody>
            <tr>
              <th>会員ID</th>
              <td><%= @customer.id %></td>
　        　</tr>
　　        <tr>
　　          <th>氏名</th>
　　          <!--フルネームにするための記述-->
　　          <td><%= @customer.first_name %>
                  <%= @customer.last_name %>
　　          </td>
　　        </tr>
　        　<tr>
　　          <th>フリガナ</th>
　　          <td><%= @customer.first_name_kana %>
　　             <%= @customer.last_name_kana %>
　　          </td>
　          </tr>
　        　<tr>
　　          <th>郵便番号</th>
　　          <td><%= @customer.postcode %></td>
　        　</tr>
　        　<tr>
　  　        <th>住所</th>
　　          <td><%= @customer.address %></td>
　　        </tr>
　        　<tr>
　　          <th>電話番号</th>
　　          <td><%= @customer.phone_number %></td>
　        　</tr>
　        　<tr>
　　          <th>メールアドレス</th>
　　          <td><%= @customer.email %></td>
　        　</tr>
　        　<tr>
　　          <th>会員ステータス</th>
　　          <td><% if customer.is_deleted == false %>
                  有効
                  <% else %>
                  退会
                  <% end %>
　　          </td>
　    　    </tr>
　    　  </tbody>
　    　</table>
　      <div class="row">
　　      <%= link_to "編集する", edit_admin_customer_path(@customer), class: 'btn btn-sm btn-success w-25 mt-3' %>
　　      <%= link_to "注文一覧を見る", admin_orders, class: 'btn btn-sm btn-success w-25 mt-3' %>
　      </div>
      </div>
    </div>
  </div>
</main>