<main>
  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-1">
        <h2 class="my-5">商品一覧</h2>
      </div>
    </div>
    <div class="row">
      <div class="mx-auto col-md-8 mb-5">
        <%= link_to new_admin_item_path do %>
          <i class="fas fa-folder-plus fa-2x" style="color:#ED52A1"></i>
        <% end %>
        <table class="table mb-5 text-center">
          <thead>
            <tr>
              <th>商品ID</th>
              <th>商品名</th>
              <th>税抜価格</th>
              <th>ジャンル</th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
              <tr>
                <td><%= item.id %></td>
                <td><%= link_to item.name, admin_item_path(item.id) %></td>
                <td><%= item.price_without_tax %></td>
                <td><%= item.category.name %></td>
                <td>
                  <% if item.is_active == "sale" %>
                    <p class="font-weight-bold text-success">販売中</p>
                  <% else %>
                    <p class="font-weight-bold text-secondary">販売停止中</p>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @items %>
      </div>
    </div>
  </div>
</main>