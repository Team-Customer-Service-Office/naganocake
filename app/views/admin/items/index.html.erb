<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2 class="my-5 ml-5 pl-5">商品一覧</h2>
      <table class="table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to '#{item.name}', admin_item_path(item.id) %></td>
              <td><%= item.price_without_tax %></td>
              <td><%= item.category_id %></td>
              <td><%= item.is_active %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>