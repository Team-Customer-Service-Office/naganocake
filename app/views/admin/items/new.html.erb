<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2 class="my-5 ml-5 pl-5">商品新規登録</h2>
    </div>
    <div class="mx-auto">
      <%= form_with model: [:admin, @item], local:true do |f| %>
        <table>
          <tbody>
            <tr>
              <th class="m-2">商品画像</th>
              <td><%= f.attachment_field :image %></td>
            </tr>
            <tr>
              <th class="m-2">商品名</th>
              <td><%= f.text_field :name, placeholder: '商品名', class: 'form-control' %></td>
            </tr>
            <tr>
              <th class="m-2">商品説明</th>
              <td><%= f.text_area :description, rows: '5', placeholder: 'ここに説明文を記述します', class: 'form-control' %></td>
            </tr>
            <tr>
              <th class="m-2">ジャンル</th>
              <td><%= f.collection_select :category_id, Category.all, :id, :name, {prompt: "--選択してください--"}, { class: 'form-control' , required: true } %></td>
            </tr>
            <tr>
              <th class="m-2">税抜価格</th>
              <td><%= f.text_field :price_without_tax, placeholder: '1000', class: 'form-control' %></td>
              <td>円</td>
            </tr>
            <tr>
              <th class="m-2">販売ステータス</th>
              <td>
                <%= f.check_box :is_active, {}, 'sale' %>販売中
                <%= f.check_box :is_active, {}, "stop" %>販売停止中
              </td>
            </tr>
          </tbody>
        </table>
        <div class="col text-center mt-5">
          <%= f.submit '新規登録', class: 'btn btn-success mb-3' %>
        </div>
      <% end %>
    </div>
  </div>
</div>