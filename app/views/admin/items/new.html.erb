<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2 class="my-5 ml-5 pl-5">商品新規登録</h2>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto">
      <%= form_with model: [:admin, @item], local:true do |f| %>
        <table class="table table-borderless mb-5">
          <tbody>
            <tr>
              <th>商品画像</th>
              <td><%= f.attachment_field :image %></td>
            </tr>
            <tr>
              <th>商品名</th>
              <td><%= f.text_field :name, placeholder: '商品名', class: 'form-control' %></td>
            </tr>
            <tr>
              <th>商品説明</th>
              <td><%= f.text_area :description, rows: '5', placeholder: 'ここに説明文を記述します', class: 'form-control' %></td>
            </tr>
            <tr>
              <th>ジャンル</th>
              <td><%= f.collection_select :category_id, Category.all, :id, :name, {prompt: "--選択してください--"}, { class: 'form-control' , required: true } %></td>
            </tr>
            <tr>
              <th>税抜価格</th>
              <td class="input-group">
                <%= f.text_field :price_without_tax, placeholder: '1000', class: 'form-control' %>
                <div class="d-flex input-group-append">
                  <span class="input-group-text">円</span>
                </div>
              </td>
            </tr>
            <tr>
              <th>販売ステータス</th>
              <td>
                <%= f.radio_button :is_active, :sale %>
                <%= f.label :is_active, Item.is_actives_i18n[:sale] %>
                <%= f.radio_button :is_active, :stop %>
                <%= f.label :is_active, Item.is_actives_i18n[:stop] %>
              </td>
            </tr>
          </tbody>
        </table>
        <div class="col text-center mb-5">
          <%= link_to '一覧へ戻る', admin_items_path, class: 'btn btn-secondary mx-3' %>
          <%= f.submit '新規登録', class: 'btn btn-success mx-3' %>
        </div>
      <% end %>
    </div>
  </div>
</div>