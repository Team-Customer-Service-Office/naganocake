<main>
  <div class="container">
    <div class="row">
      <div class="col-md-6 offset-md-1">
        <h2 class="my-5">商品詳細</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3 offset-md-2">
        <%= attachment_image_tag @item, :image, format: '.jpeg', size: "300x200" %>
      </div>
      <div class="col-md-4 offset-md-1">
        <table class="table mb-5">
          <tr>
            <th>商品名</th>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <th>商品説明</th>
            <td><%= @item.description %></td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td><%= @item.category.name %></td>
          </tr>
          <tr>
            <th>税込価格</br>(税抜価格)</th>
            <td>
              <%= (@item.price_without_tax*1.08).round.to_s(:delimited) %>
              (<%= @item.price_without_tax.to_s(:delimited) %>) 円
            </td>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <% if @item.is_active == "sale" %>
              <td class="font-weight-bold text-success">販売中</td>
            <% else %>
              <td class="font-weight-bold text-secondary">販売停止中</td>
            <% end %>
          </tr>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col text-center mb-5">
        <%= link_to "一覧へ戻る", admin_items_path, class: "btn btn-secondary mx-3" %>
        <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success mx-3" %>
      </div>
    </div>
  </div>
</main>