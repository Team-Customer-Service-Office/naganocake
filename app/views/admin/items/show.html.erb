<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2 class="my-5 ml-5 pl-5">商品一覧</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 offset-md-2">
      <%= attachment_image_tag @item, :image, :fill, 200, 300, size: "200x300" %>
    </div>
    <div class="col-md-5 offset-md-1">
      <table class="table">
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.description %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.category.name %></td>
        </tr>
        <tr>
          <th>税込価格</br>(税抜価格)</th>
          <td>
            <%= (@item.price_without_tax*1.08).round.to_s(:delimited) %>
            (<%= @item.price_without_tax.to_s(:delimited) %>) 円
          </td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td><%= @item.is_active? ? '販売中':'販売停止中' %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="col text-center mt-5">
    <%= link_to '編集する', edit_admin_item_path(@item.id),class: 'btn btn-success mb-3' %>
  </div>
</div>
