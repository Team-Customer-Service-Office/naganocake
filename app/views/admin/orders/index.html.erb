<!--管理者TOP-->
<main>
    <div class="container">
        
        <div class="row">
          <div class="col-md-6 offset-md-1">
            <h2 class="my-5">注文履歴一覧</h2>
          </div>
        </div>
        
        
        <table class="table">
            
            <thead class="thead-lignt">
                <th>購入日時</th>
                <th>購入者</th>
                <th>注文個数</th>
                <th>注文ステータス</th>
            </thead>
            
            <tbody>
                   <% @orders.each do |order| %>
                <tr>
                <td>
                   <%= link_to order.created_at.strftime('%Y/%m/%d %H:%M'),  admin_order_path(order.id) %>
                </td>
                <td>
                   <%= order.item.name %>
                </td>
                <td>
                   <%= order.quantity %>
                </td>
                <td>
                    <%= Order.order_statuses_i18n[order.order.order_status] %>
                    
                </td>
                </tr>
                <% end %>
            </tbody>
        </table>
        
        <%= paginate @orders %>
    
    </div>
</main>