<main>
    <div class="container">
      
        <div class="row">
            <h2 class="mt-5 col-9">ショッピングカート</h2>
            
             <%= link_to "カートを空にする", class:"mt-5 col-3 btn btn-danger" %>
          
          <table class="col-12 table-bordered">
              <thead>
                  
                      <th>商品名</th>
                      <th>単価（税込）</th>
                      <th>数量</th>
                      <th>小計</th>
                      <th></th>
                  
              </thead>
              
              <tbody>
                  <% @item.each do |cart_item| %>
                  <td><%= cart_item.item.name %></td>
                  <td><%= cart_item.item.price_without_tax %></td>
                  <td><%= cart_item.amount %></td>
                  <td><%= cart_item.subtotal %></td>
                  <td></td>
                  <% end %>
              </tbody>
              
          </table>
          
          <div class="row">
              
            <div class="col-8">
             <%= link_to "買い物を続ける", items_path, class:"btn btn-primary", type:"button" %>
            </div>
          
          
              <div class="col-4">
                  <table class="table table-bordered">
                      <tr>
                      <th>合計金額</th><td>合計額</td>
                      </tr>
                  </table>
              </div>
        
           </div>
           
           
           
        
        
        
    </div>
</main>