<div class="container">
  <div class ="row">
    <div class="mx-auto">
      <div class="my-4">
        <h3>新規会員登録</h3>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "customer/shared/error_messages", resource: resource %>

      <div class="field d-flex flex-row justify-content-between mb-2">
        <%= f.label :名前 %><br />
        <%= f.label :（性） %><br />
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
        <%= f.label :（名） %><br />
        <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      </div>

      <div class="field d-flex flex-row justify-content-between mb-2">
        <%= f.label :フリガナ %><br />
        <%= f.label :（セイ） %><br />
        <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
        <%= f.label :（メイ） %><br />
        <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
      </div>

      <div class="field d-flex flex-row justify-content-between mb-2">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
      
      <div class="field d-flex flex-row justify-content-between mb-2">
        <%= f.label :郵便番号（ハイフンなし） %><br />
        <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
      </div>
      
      <div class="field d-flex flex-row justify-content-between mb-2">
        <%= f.label :住所 %><br />
        <%= f.text_field :address, autofocus: true, autocomplete: "address", size: "20×20" %>
      </div>
      
      <div class="field d-flex flex-row justify-content-between mb-2">
        <%= f.label :電話番号（ハイフンなし） %><br />
        <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
      </div>

      <div class="field d-flex flex-row justify-content-between mb-2">
        <%= f.label :パスワード（6文字以上） %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field d-flex flex-row justify-content-between mb-2">
        <%= f.label :パスワード（確認用） %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions text-center">
        <%= f.submit "新規登録", class: 'btn btn-sm btn-success w-25 mt-3' %>
      </div>
      <% end %>

      <div class="my-4">
        <h3>既に登録済みの方</h3>
        <P><%= link_to "こちら", new_customer_session_path %>からログインしてください</P>
      </div>
    </div>
  </div>
</div>