<div class="containerr my-5">
  
  <div class="row">
    <div class="offset-1">
      <h2>会員情報編集</h2>
    </div>
  

      <%= form_with model:@customer, local:true do |f| %>

        <table class="row table">

　      　<tr>
　　        <th><%= f.label :氏名 %></th>
　　        <td><%= f.text_field :first_name, class:"form-control" %>
                <%= f.text_field :last_name, class:"form-control" %>
　　        </td>
　    　  </tr>

　      　<tr>
　　        <th><%= f.label :フリガナ %></th>
　　        <td><%= f.text_field :first_name_kana, class:"form-control" %>
　　            <%= f.text_field :last_name_kana, class:"form-control" %>
　　        </td>
　      　</tr>

　      　<tr>
　　        <th><%= f.label :郵便番号 %></th>
　　        <td><%= f.text_field :postcode, class:"form-control" %></td>
　      　</tr>

　      　<tr>
　  　      <th><%= f.label :住所 %></th>
　　        <td><%= f.text_field :address, class:"form-control" %></td>
　　      </tr>

　      　<tr>
　　        <th><%= f.label :電話番号 %></th>
　　        <td><%= f.text_field :phone_number, class:"form-control" %>/td>
　      　</tr>

　      　<tr>
　　        <th><%= f.label :メールアドレス %></th>
　　        <td><%= f.text_field :email , class:"form-control"%></td>
　      　</tr>

　　    </table>

　    　<div class="row">
            <%= f.submit "変更を保存" ,class: "btn btn-success " %>
        </div>

        <div class="col-2 d-flex flex-column align-items-end">
            <%= link_to "退会する" , unsubscribe_path(@customer), class: "btn btn-danger mt-auto" %>
        </div>

        <% end %>

  </div>
</div>