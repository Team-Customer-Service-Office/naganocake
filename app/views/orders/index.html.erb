<main>
    <div class="container">
        <div class="row "></div>
            <div class="col-md-8 offset-md-1 my-5">
            <h2>注文履歴一覧</h2>
            </div>
            <table class="table table-bordered m-0">
                <thead>
                    <th>注文日</th>
                    <th>配送先</th>
                    <th>注文商品</th>
                    <th>支払金額</th>
                    <th>ステータス</th>
                    <th>注文詳細</th>
                </thead>
                <tbody>
                    
                    <% @order.each do |order| %>
                    <tr>
                    <td>
                        <%= order.created_at.strftime('%Y/%m/%d') %>
                    </td>
                    <td>
                        <%= order.postcode %>
                        <%= order.address %>
                        <%= order.full_name %>
                    </td>
                    <td>
                        <% order.order_details.each do |i| %>
                        <%= i.item.name %></br>
                        <% end %>
                    </td>
                    <td>
                       <%= (order.calc_total()*1.08).round %>
                    </td>
                    <td>
                      
                    </td>
                    <td>
                        <%= link_to "表示する", order_path(order), class:"btn btn-primary"  %>
                        
                    </td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
       </div>
    </div>
</main>