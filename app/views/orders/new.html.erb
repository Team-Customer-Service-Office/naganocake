<main>
  <div class="container">
    <div class="row">
      <div class="col-md-8 offset-md-1 my-5">
        <h2>注文情報入力</h2>
      </div>
    </div>
    <div class="row">
      <div class="mx-auto col-md-10 mb-2">
        <%= form_with model:@order, url:confirm_path,  local:true do |f| %>
          <strong>支払い方法</strong>
          <div class="form_group ml-4">
            <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
            <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card], for:"order_payment_method_credit_card" %>
          </div>
          <div class="form_group ml-4">
            <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
            <%= f.label :payment_method, Order.payment_methods_i18n[:transfer], for:"order_payment_method_transfer" %>
          </div>
          <strong>お届け先</strong>
          <div class="form_group ml-4">
            <%= f.radio_button :select_address, '0' %>
            <%= f.label :select_address, "ご自身の住所", value: 0 %><br>
            <p class="ml-5"><%= current_customer.user_address %></p>
          </div>
          <div class="form_group ml-4">
            <%= f.radio_button :select_address, '1' %>
            <%= f.label :select_address, "登録済住所から選択", value: 1 %><br>
            <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :full_address), class: "form-control" %>
          </div>
          <div class="form_group ml-4">
            <%= f.radio_button :select_address, '2' %>
            <%= f.label :select_address, "新しいお届け先", value: 2 %>
            <table class="table table-borderless col-md-8">
              <tr>
                <th><%= f.label "郵便番号（ハイフンなし）" %></th>
                <td><%= f.text_field :postcode, class: "form-control" %></td>
                <td></td>
              </tr>
              <tr>
                <th><%= f.label "住所" %></th>
                <td><%= f.text_field :address, class: "form-control" %></td>
                <td></td>
              </tr>
              <tr>
                <th><%= f.label "宛名" %></th>
                <td><%= f.text_field :full_name, class: "form-control" %></td>
                <td></td>
              </tr>
            </table>
            <div class="row">
              <div class="mx-auto col-md-10 mb-2">
                <%= f.submit "確認画面へ進む", class:"mt-2 btn btn-primary mb-5" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>