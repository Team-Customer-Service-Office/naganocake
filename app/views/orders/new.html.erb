<main>
    <div class="container">
        
        <div class="my-4">
            <div class="my-2">
              <span style="background-color:pink;">注文情報入力</span>
             </div>
        
       
        <%= form_with model:@order, local:true do |f| %>
        
            <strong>支払い方法</strong>
            <div class="form_group ml-4">
              <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
              <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card], for:"order_payment_method_credit_card" %>
            </div>
              
            <div class="form_group ml-4">
              <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
              <%= f.label :payment_method, Order.payment_methods_i18n[:transfer], for:"order_payment_method_transfer" %>
            </div>
            
            <strong>お届け先</strong>
           <div class="form_group ml-4">
                <%= f.radio_button :address, '0' %>
                <%= f.label :address, "ご自身の住所", value: 0 %>
                <!--current_user.address??-->
            </div>
            
            <div class="form_group ml-4">
              <%= f.radio_button :address, '1' %>
              <%= f.label :address, "登録済住所から選択", value: 1 %>
              <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :full_address)%>
            </div>
            
            <div class="form_group ml-4">
                <%= f.radio_button :address, '2' %>
                <%= f.label :address, "新しいお届け先", value: 2 %>
            </div>
             <div class="form_group ml-4 pt-1">
                 <%= f.label "郵便番号（ハイフンなし）", class:"col-sm-3 col-form-label" %>
                <%= f.text_field :postcode%>
            </div>
            <div class="form_group ml-4 pt-1">
                <%= f.label "住所", class:"col-sm-3 col-form-label" %>
                <%= f.text_field :address, class:"col-5"  %>
            </div>
            <div class="form_group ml-4 pt-1">
                <%= f.label "宛名", class:"col-sm-3 col-form-label"  %>
                <%= f.text_field :full_name %>
            </div>
            
            <div class="form-group row justify-content-center">
             <%= f.submit "確認画面へ進む", class:"mt-2 btn btn-primary" %>
            </div>
              
    
        <% end %>
        
        
        
    
    </div>
</main>