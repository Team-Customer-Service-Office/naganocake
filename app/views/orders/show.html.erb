<main>
    <div class="container">
        <div class= "row">
            <div class="col-md-8 offset-md-1 my-5">
            <h2>注文履歴詳細<h2>
            </div>
            <div class="col-6">
                <strong>注文情報</strong>
                <table class="table table-bordered m-0">
                    <tr>
                    <th>注文日</th>
                    <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
                    </tr>
                    <tr>
                    <th>配送先</th>
                    <td>
                        <%= @order.postcode %></br>
                        <%= @order.address %></br>
                        <%= @order.full_name %></br>
                    </td>
                    </tr>
                    <tr>
                    <th>支払方法</th>
                    <td><%= @order.payment_method %></td>
                    </tr>
                    <tr>
                    <th>ステータス</th>
                    <td><%= @order.order_status %></td>
                    </tr>
                </table>
            </div>
            <div class="col-3"> 
                <strong>請求情報</strong>
                <table class="table table-bordered">
                    <tr>
                    <th>商品合計</th> <td><%= @order.calc_total() %></td>
                    </tr>
                    <tr>
                    <th>配送料</th><td>800</td>
                    </tr>
                    <tr>
                    <th>ご請求額</th><td><%= @order.calc_total()+800 %></td>
                    </tr>
                </table>
        　　</div>
            <div class="col-8">
                <strong>注文内容</strong>
                    <table class="table table-bordered">
                        <thead>
                            <th>商品</th>
                            <th>単価（税込）</th>
                            <th>個数</th>
                            <th>小計</th>
                        </thead>
                        <tbody>
                            <% @order.order_details.each do |item| %>
                            <tr>
                            <td><%= item.item.name %></td>
                            <td><%= (item.item.with_tax_price).round %></td>
                            <td><%= item.quantity %></td>
                            <td><%= (item.item.with_tax_price * item.quantity).round %></td>
                            </tr>
                            <% end %>
                        </tbody>
                    </table>
            </div>
   　　 </div>
    </div>
</main>